{
  "manifest_version": 3,
  "name": "Smart Notes Capture",
  "version": "0.2.0",
  "description": "Capture text from any webpage with comments and organize your notes",
  "permissions": ["storage", "activeTab", "contextMenus"],
  "host_permissions": ["http://localhost:8000/*"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content/content.js"],
    "css": ["content/modal.css"],
    "run_at": "document_end",
    "all_frames": false
  }],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Smart Notes"
  },
  "web_accessible_resources": [{
    "resources": ["debug.js"],
    "matches": ["<all_urls>"]
  }]
}